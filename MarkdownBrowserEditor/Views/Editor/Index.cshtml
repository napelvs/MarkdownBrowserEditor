
@{
    ViewData["Title"] = "Editor";
}

@section scripts {
    <script src="~/js/bundles/bundle.js"></script>
    <!-- Template Main JS File -->
    <script src="~/js/main.js"></script>
}

@section links {

    <link rel="stylesheet" href="~/lib/codemirror/lib/codemirror.css" />
    <link rel="stylesheet" href="~/lib/toastui-editor/dist/toastui-editor.css" />

    <!-- Template Main CSS File -->
    <link href="~/css/style.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
}

<section class="hero-section inner-page">
    <div class="wave">

        <svg width="1920px" height="265px" viewBox="0 0 1920 265" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
            <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <g id="Apple-TV" transform="translate(0.000000, -402.000000)" fill="#FFFFFF">
                    <path d="M0,439.134243 C175.04074,464.89273 327.944386,477.771974 458.710937,477.771974 C654.860765,477.771974 870.645295,442.632362 1205.9828,410.192501 C1429.54114,388.565926 1667.54687,411.092417 1920,477.771974 L1920,667 L1017.15166,667 L0,667 L0,439.134243 Z" id="Path"></path>
                </g>
            </g>
        </svg>

    </div>

    <div class="container">
        <div class="row align-items-center">
            <div class="col-12">
                <div class="row justify-content-center">
                    <div class="col-md-7 text-center hero-text">
                        <h1 data-aos="fade-up" data-aos-delay="">Blog Posts</h1>
                        <p class="mb-5" data-aos="fade-up" data-aos-delay="100">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

@section editor {
    <div class="m-auto px-3" >

        <div>
            <b>Server Status:</b>
            <span id="serverStatus" class="badge"> Input group name to start collaborating. </span>

            <div class="input-group mb-3">
                <input type="text" id="groupName" class="form-control" placeholder="Group Name" aria-label="Group Name" aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" id="joinGroupButton">Join</button>
                </div>
            </div>

            <b class="px-4">Dark Mode:</b>
            <button type="button" class="btn btn-light btn-sm" id="enableDarkMode">ON</button>
            <button type="button" class="btn btn-dark btn-sm" id="enableLightMode">OFF</button>

            <button class="btn btn-outline-secondary" type="button" id="mdToPDFButton">Download as PDF</button>
        </div>
        <div id="editor"></div>
    </div>
}

